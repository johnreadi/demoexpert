// Prisma schema for demoexpert API (initial scope: Users)
// Database URL is provided via env var DATABASE_URL at runtime/deploy

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      Role
  status    Status   @default(approved)
  password  String   // hashed (bcrypt)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  Admin
  Staff
}

enum Status {
  approved
  pending
}
