// Prisma schema for demoexpert API (initial scope: Users)
// Database URL is provided via env var DATABASE_URL at runtime/deploy

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      Role
  status    Status   @default(approved)
  password  String   // hashed (bcrypt)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  Admin
  Staff
}

enum Status {
  approved
  pending
}

model Product {
  id           String   @id @default(cuid())
  name         String
  oemRef       String   @unique
  brand        String
  model        String
  year         Int
  category     String
  price        Decimal  @db.Decimal(12,2)
  condition    String
  warranty     String
  compatibility String?
  images       String[]
  description  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Auction {
  id           String   @id @default(cuid())
  vehicleName  String
  brand        String
  model        String
  year         Int
  mileage      Int
  description  String
  images       String[]
  startingPrice Decimal  @db.Decimal(12,2)
  currentBid   Decimal   @db.Decimal(12,2)
  bidCount     Int       @default(0)
  endDate      DateTime
  bids         Bid[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([endDate])
}

model Bid {
  id         String   @id @default(cuid())
  auctionId  String
  auction    Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)
  userId     String
  bidderName String
  amount     Decimal  @db.Decimal(12,2)
  timestamp  DateTime @default(now())
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}